# .npmignore

# Source files (only ship compiled dist/)
src/
*.ts
!*.d.ts

# Development and testing
tests/
test/
*.test.js
*.test.ts
test-*.js
coverage/
.nyc_output/

# Configuration files
.env
.env.*
.eslintrc*
.prettierrc*
jest.config.*
tsconfig.json
rollup.config.*
webpack.config.*
.babelrc*

# Documentation source files
docs/
examples/
*.md
!README.md

# Git and CI/CD
.git/
.github/
.gitignore
.gitlab-ci.yml
.travis.yml

# IDE and OS files
.vscode/
.idea/
*.swp
*.swo
.DS_Store
Thumbs.db

# Build artifacts and logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*
lerna-debug.log*
*.tgz

# Development files
*.map
.tmp/
temp/
tmp/

# Keep only essential files
!dist/**
!package.json
!LICENSE
!README.md